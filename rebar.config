%%
%% rebar configuration file (https://github.com/rebar/rebar)
%%

{require_otp_vsn, "18"}.

{erl_opts, [
    debug_info,
    fail_on_warning,
    {parse_transform, lager_transform}
]}.

{clean_files, [
    "_rel",
    "ebin",
    "logs",
    "src/*.beam",
    "test/*.beam"
]}.

{pre_hooks, [{compile, "make precompile"}]}.

{deps, [
    {lager,   ".*", {git, "https://github.com/basho/lager",     {tag, "3.1.0"}}},
    {hackney, ".*", {git, "https://github.com/benoitc/hackney", {tag, "1.5.0"}}},
    {jiffy,   ".*", {git, "https://github.com/davisp/jiffy",    {tag, "0.14.7"}}}
]}.
